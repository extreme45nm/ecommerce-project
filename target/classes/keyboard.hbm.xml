<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="edu.java.spring.model.Keyboard" table="keyboard">
		<meta attribute="class-description">
			This class contains manufacturer details
		</meta>
		<id name="productId" column="productId">
			<generator class="native"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="switchId" column="switchId" type="int"/>
		<property name="profileId" column="profileId" type="int"/>
		<property name="price" column="price" type="int"/>
		
	</class>
</hibernate-mapping>